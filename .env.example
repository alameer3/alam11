# Database
DATABASE_URL="file:./dev.db"

# NextAuth.js
NEXTAUTH_SECRET="your-secret-key-here"
NEXTAUTH_URL="http://localhost:3000"

# Email Configuration for Monitoring
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your-email@gmail.com"
SMTP_PASSWORD="your-app-password"
SMTP_FROM="noreply@ak-sv.com"

# Admin Configuration
ADMIN_EMAIL="admin@ak-sv.com"

# Webhook URL for alerts (optional)
WEBHOOK_URL=""

# Logging Configuration
LOG_LEVEL="info"

# Monitoring Configuration
MONITORING_ENABLED="true"
HEALTH_CHECK_INTERVAL="300000" # 5 minutes in milliseconds
NOTIFICATION_THRESHOLD="3" # Number of failures before notification

# Site Configuration
SITE_NAME="AK.SV"
SITE_URL="http://localhost:3000"
SITE_DESCRIPTION="موقع البث المتقدم"

# Security
RATE_LIMIT_REQUESTS="100"
RATE_LIMIT_WINDOW="900000" # 15 minutes in milliseconds

# Performance
CACHE_TTL="3600" # 1 hour in seconds
MAX_UPLOAD_SIZE="10485760" # 10MB in bytes